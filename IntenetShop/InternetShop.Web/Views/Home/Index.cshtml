@model HomeViewModel
<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-btn" data-filter="all">
            All
        </button>
        @foreach(var item in Model.Categories)
        {
            <button class="btn btn-outline filter-btn" data-filter="@item.Name.Replace(' ','-')">
                @item.Name
            </button>
        }
    </div>
    <div class="row">
        @foreach(var item in Model.Products)
        {
            <partial name="_ProductCards" model="item"/>
        }
    </div>

</div>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('.filter-btn').click(function(){
                let value = $(this).attr('data-filter')
                if(value == 'all'){
                    $('.filter').show('1000');
                }
                else{
                    $('.filter').not('.'+value).hide('3000')
                    $('.filter').filter('.'+value).show('3000')
                }
            })
        })
    </script>
}